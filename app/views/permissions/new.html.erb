<%=render :partial => "/shared/user_menu", :locals=>{:active_tab => "permission"}%>
<div class="block">
    <div class="content">
      <div class="inner">
				<h1>New Permissions</h1>
				<%= form_for(@permission, :url => permissions_path(@permission),:html=>{:class=>"form"}) do |f| %>
					<div class="group">
						<div class="group string required">
							<label class="string required label" for="role_group_name"><abbr title="required">*</abbr>Name</label>
							<%=f.text_field :name%>
						</div>
					</div>
					<div class="group">
						<div class="group string required">
							<label class="string required label" for="role_group_name"><abbr title="required">*</abbr> Group name</label>
							<%=collection_select(:persmission, :group_id, @groups, :id, :name, :prompt => true)%>
						</div>
					</div>
					<div class="permission-block" style="background:#f7f7f7;height:50px;padding:10px">
				    <div class="float-left" style="width:30%;">
				      <h4>Functionality Names</h4>
				      </div>
				    
				    <div class="float-left" style="width:10%">
				       <h4><input id="check_list_all" name="check_list_all" type="checkbox" value="1"></h4>
				    </div>
				    
				    <div class="float-left" style="width:10%">
				      <h4><input id="check_add_all" name="check_add_all" type="checkbox" value="1"></h4>
				    </div>
				    
				    <div class="float-left" style="width:10%">
				      <h4><input id="check_edit_all" name="check_edit_all" type="checkbox" value="1"></h4>
				    </div>
				  </div>
				  <div style="clear:both"></div>
				    <div class="permission-block" style="padding-left:10px">
				      <div class="float-left" style="width:30%">
				        <h4>Admin Management</h4>
				      </div>
				      <div class="float-left" style="width:10%">
				        <h4><input id="listing_" name="listing[]" type="checkbox" value="1"> Listing</h4>
				      </div>
				      <div class="float-left" style="width:10%">
				        <h4><input id="adding_" name="adding[]" type="checkbox" value="1">Add</h4>
				      </div>
				      <div class="float-left" style="width:10%">
				        <h4><input id="editing_" name="editing[]" type="checkbox" value="1">Edit</h4>
				      </div>
				    </div>
				    <div style="clear:both"></div>
				    <div class="group navform wat-cf">
					    <button class="button" type="submit">
					    <%=image_tag("tick.png")%> Save
					    </button>
					  </div>
				<%end%>
			</div>
		</div>
</div>